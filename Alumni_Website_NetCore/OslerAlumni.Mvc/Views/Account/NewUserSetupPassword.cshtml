@using OslerAlumni.Mvc.Extensions
@using OslerAlumni.Mvc.Extensions.OslerControls.RichTextField
@using OslerAlumni.Mvc.Models
@model ResetPasswordPageViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="c-account">
    <div class="row align-center">
        <div class="columns medium-6 small-12">
            <div class="o-container o-container-centered">
                <h1 class="cloak-h3">@Model.Title </h1>
                @if (!string.IsNullOrWhiteSpace(Model.Description))
                {
                    @Html.OslerForModel().RichTextFieldFor(Model.Description).ToHtmlString()
                }
            </div>
        </div>
    </div>
    <div class="row align-center">
        <div class="columns medium-4 small-12">
            @Html.EditorFor(model => model.FormModel)
        </div>
    </div>
    @Html.Partial("_ResetPasswordSuccess", Model)
</div>
