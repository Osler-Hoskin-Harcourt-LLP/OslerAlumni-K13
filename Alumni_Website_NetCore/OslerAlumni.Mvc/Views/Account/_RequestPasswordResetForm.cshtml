@using Kentico.PageBuilder.Web.Mvc
@using Kentico.Web.Mvc
@using OslerAlumni.Mvc.Core.Definitions
@using OslerAlumni.Mvc.Extensions
@using OslerAlumni.Mvc.Extensions.OslerControls.Button
@using OslerAlumni.Mvc.Models
@model RequestPasswordResetPostModel

@using (Html.BeginForm(
    "RequestPasswordReset",
    "Account",
    FormMethod.Post,
    new { @class = "c-form", id = "passwordResetRequest" }))
{
    @Html.AntiForgeryToken()

    @Html.Kentico().PageData()

    @Html.FormErrorSummary()

    @Html.StyledEditorFor(model => model.UserNameOrEmail, nameof(RequestPasswordResetPostModel.UserNameOrEmail))

    @(Html.Osler()
          .FormSubmitButton()
          .WithText(Constants.ResourceStrings.Send)
          .AddClass("is-full-width")
          .ToHtmlString())

    @Html.Partial("_FormServerError")
}
